<?xml version="1.0" encoding="UTF-8" ?>

<project name="Binary Sort" basedir=".">
	<target name="compile">
		<javac srcdir="src" destdir="bin" />
		<exec executable="DateTime.bat" />
	</target>
	
	<target name="run">
		<java classname="main.BinarySort" classpath="bin" />
		<exec executable="DateTime.bat" />
	</target>
	
	<target name="clean">
		<delete dir="bin" />
		<mkdir dir="bin" />
		<exec executable="DateTime.bat" />
	</target>
</project>